<%= stylesheet_link_tag "homepage"%>
<%= javascript_include_tag "homepage"%>

<body>
  <%# Link to sign in with facebook %>
  <table class = "icons" align="left">
    <tr>
      <th><%= link_to_rpx image_tag("/images/facebook_icon.png"), designer_session_url %></th>
      <th><img src="/images/login-icon.png" class ="login_image" onclick= "sliding_form()"/></th>
    </tr>
  </table>
  <div class="login_form span1" dir = "rtl">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <p>
        <i class="icon-user icon-large"></i>
        <%= f.email_field :email, :placeholder=> "اﻟﺒﺮﻳﺪ اﻹﻟﻜﺘﺮﻭﻧﻲ", :required =>true %>
      </p>
      <p>
        <i class="icon-lock icon-large"></i>
        <%= f.password_field :password,:placeholder=> "ﻛﻠﻤﺔ اﻟﺴﺮ", :required =>true %>
      </p>        
      <% if devise_mapping.rememberable? -%>
        <div>ﺗﺬﻛﺮﻧﻲ <%= f.check_box :remember_me %></div> <!-- remember me-->
        <p class = "forgot_password"><%= render "devise/shared/links" %></p>
        <div align="left"><%= f.submit "ﺩﺧﻮﻝ", options = {:class => "btn btn-info"} %></div>
      <% end %>
    <% end %>
  </div>
  </br>
  </br>
  </br>
  <div class ="span12">
    <div id="slide" class="carousel slide span12">
      <!-- Carousel items -->
      <div class="carousel-inner">
        <div class="active item">
          <img src="/images/2.jpg"/>
        </div>
        <div class="item">
          <img src="/images/1.jpg"/>
        </div>
        <div class="item">
          <img src="/images/3.jpg"/>
        </div>
        <div class="item">
          <img src="/images/4.jpg"/>
        </div>
        <div class="item">
          <img src="/images/5.jpg"/>
        </div>
      </div>
      <!-- Carousel nav -->
      <a class="carousel-control left" href="#slide" data-slide="prev">&lsaquo;</a>
      <a class="carousel-control right" href="#slide" data-slide="next">&rsaquo;</a>
    </div>
  </div>


  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "تسجيل", new_registration_path(resource_name) %> <!-- sign up -->
  <% end -%>
  </br></br></br></br></br></br></br></br></br></br>
  <footer>
    <div class="navbar container">
      <div class="navbar-inner">
        <ul class="nav">
          <li class = "right"><a class = "right_link" href="#">شاركنا</a></li>
          <li class = "center"><a class = "center_link" href="#">من نحن ؟</a></li>
          <li class = "left"><a class = "left_link"  href="#">لمحة عن الموقع</a></li>
        </ul>
      </div>
    </div>
  </footer>
</body>