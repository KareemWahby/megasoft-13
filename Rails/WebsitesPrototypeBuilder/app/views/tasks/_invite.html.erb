<%= javascript_include_tag "share_facebook" %>

<h3> Send New Invitation </h3>
<%=t.id %>
<%= form_tag(:task_id => t.id) do %>
  <p> Email: </br> <%= text_field_tag :email, nil,:placeholder => "Email", :required => true,:pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}'%> </p>
  <p> Invitation Message: </br> <%= text_field_tag :invitation_message, nil, :placeholder => "invitation message" %> </p> 
  <%= button_to_function 'Invite', 'invite()' %> 
<% end %>  



<script type="text/javascript">
function invite(){
  var params = $.param({
    email: $('#email').val(),
    invitation_message: $('#invitation_message').val(),
    task_id: '<%= t.id %>',
    project_id: '<%= params[:project_id] %>'
  });
  $.ajax("/tasks/invite_user?"+params);
}

</script>

