<%= stylesheet_link_tag    "application", :media => "all" %>
<p id="notice"><%= notice %></p>


<h2 align="right">نتائج المهام</h2>

<% if @task.task_results.length !=0 %>
  <table align="right" class="table table-striped table-bordered">
    <tr>
      <th>البريد الالكتروني</th>
      <th>الوقت</th>
      <th>نسبة النجاح</th>
      <th></th>
    </tr>
    <% @task.task_results.each do |result| %>
      <%if result.reviewer %>
	<tr>
	  <td><%= result.reviewer.email %></td>
	  <td><%= result.time %></td>
	  <td><%= result.success %></td>
	  <td><%= link_to 'التفاصيل', :controller=> :task_results, :action => 	:index, :id => result.id %></td>
	</tr>
      <% end %>
    <% end %> 
  </table>
<% else %> 
  <div class="alert">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <strong>Warning!</strong> Best check yo self, you're not looking too good.
</div> 
<% end %>

<%= link_to 'Edit', edit_task_path(@task) %> |
<%= link_to 'Back', tasks_path %>
