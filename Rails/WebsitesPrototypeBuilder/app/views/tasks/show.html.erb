<%= stylesheet_link_tag    "application", :media => "all" %>
<p id="notice"><%= notice %></p>

<h2 align="right">تعديل الخطوات</h2>
<%= link_to 'الذهاب إلى الصفحة', edit_steps_path(params[:project_id], @task) %>

<br/>

<h2 align="right">نتائج المهام</h2>

<% if @task.task_results.length !=0 %>
  <% @task.task_results.each do |result| %>
    <%if result.reviewer %>
      <table align="right" class="table table-striped table-bordered">
        <tr>
          <th>البريد الالكتروني</th>
          <th>الوقت</th>
          <th>نسبة النجاح</th>
          <th>عدد الضغطات</th>
          <th>details</td>
        </tr>
        <% render "calculate_success", :f => result %>       
        <tr>
      	  <td><%= result.reviewer.email %></td>
      	  <td><%= result.time %></td>
      	  <td><%= result.success %> % </td>
      	  <td><%= result.clicks %><td>
        </tr>       
      </table>
    <% end %>
    <%if result.reviewer %>
      <table align="right" width=100%>
        <tr>
          <td><%= render "create_bars", :x => result %></td>
        </tr>
      </table>
    <%end%>
  <% end %> 
  
<% else %> 
  <div class="alert">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>عذراً!</strong> لا توجد نتائج 
  </div>
<% end %>
