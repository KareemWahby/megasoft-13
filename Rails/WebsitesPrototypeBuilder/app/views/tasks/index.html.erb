

<h1>Listing tasks</h1>

<table class="table table-striped table-bordered">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @tasks.each do |task| %>
  
    <tr>
      <td><%= task.name %></td>
      <td><%= link_to 'النتائج', task %></td>
      <td><%= link_to 'Edit', edit_task_path(task) %></td>
      <td><%= link_to 'Destroy', task, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
      
    </tr>
    <tr>
    <td> <div class="progress">
  <div class="bar bar-success" style="width: 10%;">1</div>
  <div class="bar bar-danger" style="width: 10%;">2</div>
  <div class="bar bar-danger" style="width: 10%;">3</div>
  <div class="bar bar-danger" style="width: 10%;">4</div>
  <div class="bar bar-danger" style="width: 10%;">5</div>
  <div class="bar bar-danger" style="width: 10%;">6</div>
</div> </td>
</tr>
    
  <% end %>
</table>

