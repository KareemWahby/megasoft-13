  <h3 id = "sidebar-list"  style ="text-align: center;"><%= link_to "Questionnare"%></h3>
  </div>
  <div class = "options" style = "height :90px">
  <hr>
  <img src="/assets/Charts-Mind-map-icon.png" width="60" height="60"><%= link_to_function "", "showPopup()" %>
