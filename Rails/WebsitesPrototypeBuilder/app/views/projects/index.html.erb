<div id='wrapper' class='container-fluid'>
<div id = "content">
  <div id='projects'>
  <ul class="thumbnails">
    <% @projects.each do |p| %> <!-- loop on the projects created by the logged in designer -->
      <li ProjectId = "<%= p.id %>" class="span4">
        <div class = "Project_Name"><h5><%= p.project_name %></h5></div>
        <div class="project-div" title="double click on the project to go to the design page." style="background-image: url(/assets/logo.png); background-size:100% 100%;" ProjectId = "<%= p.id %>" , ProjectName = "<%= p.project_name %>">
            <div class='x-button'>
            <%= button_to_function nil,"deleteProject('#{p.id}')" , :class => "icon-remove"%>    
            </div>
        </div>
      </li>
    <%end%>
  </ul>
  </div>
</div>


  <div id="sidebar">
    <div style="float: left;"><img id="slidebutton" src="/assets/slider_button.png" width="38px" height="41px"></div>
