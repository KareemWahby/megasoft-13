<%= stylesheet_link_tag 'projects' %>
<%= javascript_include_tag 'projects' %>
<% javascript_include_tag 'alert' %>

<div id='wrapper' class='container-fluid'>
  <div id = "content">
    <div id='projects'>
      <ul class="thumbnails">
        <% @projects.each do |p| %> <!-- loop on the projects created by the logged in designer -->
          <li ProjectId = "<%= p.id %>" class="span4">
            <div class = "Project_Name"><h5><%= p.project_name %></h5></div>
            <div class="project-div" title=".اضغط مرتين لتذهب لصفحة التصميم" style="background-image: url(<%= p.get_thumbnail %>); background-size:100% 100%;" ProjectId = "<%= p.id %>" , ProjectName = "<%= p.project_name %>">
              <% if  (!p.cardsorts.empty?) %>
                <input type=hidden class="cardsort_id" value="<%= p.cardsorts.first.id %>">
              <% else %>
                <input type=hidden class="cardsort_id" value="-1">
              <% end %>
              <div class='x-button'>
                <%= link_to_function nil,"deleteProject('#{p.id}')" , :class => "ui-icon ui-icon-close"%>
              </div>
            </div>
          </li>
        <%end%>
        <div class="span4 add_button" title="مشروع جديد"><img src = "/assets/AddProject_button.png"></img></div>
      </ul>
    </div>
    <div class="alert" id="project-alert">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
     اضغط على الدائرة لصنع مشروع جديد.
    </div>
    <div class="alert" id="sidebar-alert">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
     اضغط هنا اظهار اللوحة الجانبية
    </div>
    <div class="alert" id="design-alert">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
     اضغط هنا للذهاب الى صفحة التصميم
    </div>
    <div class="alert" id="tabs-alert">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    اضغط هنا للذهاب للمهام
    </div>
    <div class="alert" id="toolbox-alert">
     <button type="button" class="close" data-dismiss="alert">&times;</button>
    اضغط هنا لصناعة استطلاع راى جديد
    </div>
    <div class="alert" id="image-alert">
     <button type="button" class="close" data-dismiss="alert">&times;</button>
      يمكنك الذهاب لترتيب الاوراق من هنا
    </div>
    <div class="alert" id="version-alert">
     <button type="button" class="close" data-dismiss="alert">&times;</button>
    هنا يمكنك مراجعة الموقع
    </div>
    <div class="alert" id="pages-alert">
       <button type="button" class="close" data-dismiss="alert">&times;</button>
      اذهب هنا لرؤية المخطط النسيابى للموقع
    </div>
    <div class="alert" id="stat-alert">
       <button type="button" class="close" data-dismiss="alert">&times;</button>
     هنا توجد جميع الاحصائيات
    </div>
    <div class="alert" id="download-alert">
       <button type="button" class="close" data-dismiss="alert">&times;</button>
     هنا يمكنك تحميل الموقع
    </div>

  </div>

  <div style="float: right;"><img id="slidebutton" src="/assets/slider_button.png" width="38px" height="41px"></div>
  <div id="sidebar">
    <div id="side_content">
      <h3 id = "projectName" style ="text-align: center;"> </h3>
      <div class = "options" style = "height :80px">
        <hr>
        <a id ="Design">
        <img class = "side-image" src="/assets/design.png" width="55" height="55">
        <h3 id = "sidebar-list"  style ="text-align: center;">صمم</h3>
        </a>
      </div>
      <div class = "options" style = "height :80px">
        <hr>
        <a id ="Task">
        <img class = "side-image" src="/assets/Adds-Add-folder-icon.png" width="55" height="55">
        <h3 id = "sidebar-list"  style ="text-align: center;">المهام</h3>
        </a>
      </div>
      <div class = "options" style = "height :80px">
        <hr>
        <a id ="Questionnaire">
        <img class = "side-image" src="/assets/Adds-Add-list-icon.png" width="55" height="55">
        <h3 id = "sidebar-list" style ="text-align: center;">استطلاع</h3>
        </a>
      </div>
      <div class = "options" style = "height :80px">
        <hr>
        <img class = "side-image" src="/assets/card-sort-icon.png" width="55" height="55"><%= link_to_function "", "showCardsortForm()", :class => "cardsort_link" %>
        <h3 id = "sidebar-list" style ="text-align: center;"><%= link_to_function "ترتيب الأوراق", "showCardsortForm()", :class => "cardsort_link" %></h3>
      </div>
      <div class = "options" style = "height :80px">
        <hr>
        <a id ="Review">
        <img class = "side-image" src="/assets/review-icon.png" width="55" height="55">
        <h3 id = "sidebar-list" style ="text-align: center;">مراجعة</h3>
        </a>
      </div>
      <div class = "options" style = "height :80px">
        <hr>
        <a id ="Flowchart">
        <img class = "side-image" src="/assets/Charts-Mind-map-icon.png" width="55" height="55">
        <h3 id = "sidebar-list" style ="text-align: center;">المخطط الانسيابي</h3>
        </a>
      </div>
      <div class = "options" style = "height :80px">
        <hr>
        <a id ="Statistics">
        <img class = "side-image" src="/assets/Charts-Combo-icon.png" width="55" height="55">
        <h3 id = "sidebar-list"  style ="text-align: center;">احصائيات</h3>
        </a>
      </div>
      <div class = "options" style = "height :80px">
        <hr>
        <a id ="Download">
        <img class = "side-image" src="/assets/download.png" width="55" height="55">
        <h3 id = "sidebar-list" style ="text-align: center;">تحميل</h3>
        </a>
      </div>
      <div class = "options" style = "height :80px">
        <hr>
        <a id ="Settings">
        <img class = "side-image" src="/assets/DIY-Drill-icon.png" width="50" height="50">
        <h3 id = "sidebar-list" style ="text-align: center;">إعدادات</h3>
        </a>
      </div>
        <hr>
    </div>
  </div>

  <div class='popup-darkbackground' id='popup-projectbck'></div>
  <div class = 'popup-createProject' id='popup-project'>
    <%= form_for :project, :url => {:controller => :projects, :action => :create}, :remote => true do |f| %>
      <div class = "pattern_form_up">
        <%= link_to_function "", "hidepopup()", :class => "icon-remove", :id => "Close" %>
        <h5>أضف مشروع</h5>
      </div>
      <div class = "form_content">
        <div id='error_project' class='error'></div>
        <br>
        <br>
        <p>
          <%= f.label :Name, "اسم المشروع" %>
          <%= f.text_field :project_name , :id => "field"%> <br/>
        </p>
        <p>
          <%= f.label :Type, "النوع" %>
          <%= f.select :project_type, ['تعليمي','ترفيهي','عملي','أخرى'] , :id => "field" %> <br/>
        </p>
        <p>
          <%= f.label :Description, "وصف المشروع" %>
          <%= f.text_area :description, :cols => "100", :rows => "5" , :id => "field" %> <br/>
        </p>
        <%= f.hidden_field :designer_id, :value => current_designer.id %>
      </div>
      <div class = "pattern_form_down">
        <p class = "save">
          <%= f.submit "حفظ",:class =>"btn btn-primary" %>
        </p>
      </div>
    <%end%>
  </div>
</div>

 <div id="popup-cardsortbck" class = 'popup-createProject' id='popup-project'>
    <%= form_for :cardsort, :url => "cardsorts/create_cardsort", :method => :post, :remote => true do |f| %>
      <div class = "pattern_form_up">
        <%= link_to_function "", "hidepopup()", :class => "icon-remove", :id => "Close" %>
        <h5>اضف ترتيب اوراق</h5>
      </div>
      <div class = "form_content">
        <div id='error_project' class='error'></div>
        <br>
        <br>
        <p>
          <%= f.label :title, "اسم ترتيب الاوراق" %>
          <%= f.text_field :title , :id => "field"%> <br/>
        </p>
        <p>
          <label class="radio">
           
           <%= f.radio_button :open, "true", :checked=>"checked", :style=>"margin-left:10px;float:right;" %> 
            مفتوح
           
          </label>
          <label class="radio">
             
            <%= f.radio_button :open, "false", :style=>"margin-left:10px;float:right;" %>
           مغلق
          </label>
        </p>
        <p>
          <%= f.label :description, "وصف ترتيب الوراق" %>
          <%= f.text_area :description, :cols => "100", :rows => "5" , :id => "field" %> <br/>
        </p>
        <%= f.hidden_field :project_id %>
      </div>
      <div class = "pattern_form_down">
        <p class = "save">
          <%= f.submit "حفظ",:class =>"btn btn-primary" %>
        </p>
      </div>
    <%end%>
  </div>

</div>

<script type="text/javascript">
$(document).ready(function (){

  $('.alert').find('.close').click(function (){
    $.ajax({
      url: '/projects/take_tour',
      method: "POST"
    });
    $('.alert').remove();
  });
  <% if (!current_designer.tour_taken) %>
    <% if (current_designer.projects.empty?) %>
      $('#project-alert').fadeIn(400);
      $('.add_button').click(function (){
        $('#project-alert').fadeOut(400);
      });
    <% else %>
    $('.project-div').click(function(){
       $('#sidebar-alert').fadeOut(400);
       $('#design-alert').fadeIn(400);
       window.setTimeout(function(){
        $('#design-alert').fadeOut(400);
        $('#tabs-alert').fadeIn(400);
        window.setTimeout(function(){
          $('#tabs-alert').fadeOut(400);
        $('#toolbox-alert').fadeIn(400);
         window.setTimeout(function(){
          $('#toolbox-alert').fadeOut(400);
        $('#image-alert').fadeIn(400);
        window.setTimeout(function(){
          $('#image-alert').fadeOut(400);
        $('#version-alert').fadeIn(400);
         window.setTimeout(function(){
          $('#version-alert').fadeOut(400);
        $('#pages-alert').fadeIn(400);
         window.setTimeout(function(){
          $('#pages-alert').fadeOut(400);
        $('#stat-alert').fadeIn(400);
         window.setTimeout(function(){
          $('#stat-alert').fadeOut(400);
        $('#download-alert').fadeIn(400);
        window.setTimeout(function(){
          $('#download-alert').fadeOut(400);
        $('#download-alert').find('.close').click();
        },2000);
        },2000);
        },2000);
        },2000);
        },2000);
        },2000);
        },2000);
       },2000);
    });
      $('#sidebar-alert').fadeIn(400);
    <% end %>
  <% end %>
});
</script>
