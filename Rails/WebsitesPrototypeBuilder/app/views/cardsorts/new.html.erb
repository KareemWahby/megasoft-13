<div id="wrapper">
	<div id="sidebar">
	</div>
	<div id="content">
		<ul class="nav nav-tabs">
			<li class='active'>
				<a href="#">Cards</a>
			</li>
			<li>
				<a href="#">Groups</a>
			</li>
			<li>
				<a href="#">Settings</a>
			</li>
		</ul>
		<div class="scrollable">
			<table id="cards-table" class="table table-bordered table-hover">
				<thead>
					<tr class="well">
						<th Width='220px'>Label</th>
						<th>Description(obtional)</th>
					</tr>
				</thead>
				<% @cards.each do |card| %>
					<tr>
						<td>
							<label><%= card.title %></label>
							<input type='text' class='cardsort-input'
								Style='display:none;' placeholder='Label' />
						</td>
						<td>
							<label>
								<%= card.description %>
							</label>
							<input type='text' class='cardsort-input' 
								Style='display:none;' placeholder='Description' />
						</td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>

<script>
 	fillTable("cards-table");
 	$(document).ready(setTableEffect);
</script>