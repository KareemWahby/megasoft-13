<div id="wrapper">
	<div id="sidebar">
	</div>
	<div id="content">
		<ul class="nav nav-tabs">
			<li class='active'>
				<a href="#">Cards</a>
			</li>
			<li>
				<a href="#">Groups</a>
			</li>
			<li>
				<a href="#">Settings</a>
			</li>
		</ul>
		<div class="scrollable">
			<table id="cards-table" class="table table-bordered table-hover">
				<thead>
					<tr class="well">
						<th>Label</th>
						<th>Description(obtional)</th>
					</tr>
				</thead>
				<%= @cards.each do |card| %>
					<tr>
						<td>
							<%= card.title %>
						</td>
						<td>
							<%= card.description %>
						</td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>

<script>
 	fillTable("cards-table");
</script>